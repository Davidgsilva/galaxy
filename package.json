{
  "name": "beacon",
  "version": "1.0.0",
  "description": "AI-powered CLI tool for embedded development with silicon-specific intelligence",
  "main": "index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "cli": "node cli/index.js",
    "test": "jest",
    "test:yocto": "jest tests/yocto/",
    "lint": "eslint .",
    "build": "npm run build:server && npm run build:cli",
    "build:server": "echo 'Server build complete'",
    "build:cli": "pkg cli/index.js --out-path dist",
    "setup": "node scripts/setup.js",
    "update-silicon-db": "node scripts/update-silicon-database.js"
  },
  "bin": {
    "beacon": "./cli/index.js"
  },
  "keywords": [
    "yocto",
    "embedded",
    "bsp",
    "ai",
    "anthropic",
    "linux",
    "cross-compile",
    "bitbake",
    "openembedded",
    "silicon",
    "imx",
    "zynq",
    "ti",
    "automotive",
    "iot"
  ],
  "author": "Beacon Yocto Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.3",
    "@inquirer/prompts": "^7.8.0",
    "axios": "^1.7.2",
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "fs-extra": "^11.2.0",
    "git-url-parse": "^14.0.0",
    "glob": "^10.3.10",
    "helmet": "^7.1.0",
    "lockfile": "^1.0.4",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "openai": "^5.12.2",
    "ora": "^5.4.1",
    "path": "^0.12.7",
    "rate-limiter-flexible": "^5.0.3",
    "semver": "^7.6.0",
    "simple-git": "^3.19.1",
    "websocket": "^1.0.35",
    "winston": "^3.13.0",
    "yaml": "^2.4.2"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "pkg": "^5.8.1",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/beacon-yocto/beacon-cli.git"
  }
}
